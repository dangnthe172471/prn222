@page
@model Project_PRN221.Pages.Login.SignUpModel
@{
	Layout = "~/Pages/Shared/LoginLayout.cshtml";

}

<body>
	<main class="main-content  mt-0">
		<section class="min-vh-100 mb-8">
			<div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('/img/green-and-white-marbled-coloring.jpg');">
				<span class="mask bg-gradient-dark opacity-6"></span>
				<div class="container">
					<div class="row justify-content-center">
						<div class="col-lg-5 text-center mx-auto">
							<h1 class="text-white mb-2 mt-5">Welcome!</h1>
							<p class="text-lead text-white">Hãy đăng ký tài khoản mới nào!</p>
						</div>
					</div>
				</div>
			</div>
			<div class="container">
				<div class="row mt-lg-n10 mt-md-n11 mt-n10">
					<div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
						<div class="card z-index-0">
							<div class="card-header text-center pt-4">
								<h5>Đăng Ký Tài Khoản Của Bạn</h5>
							</div>
							<div class="card-body">
								<form asp-action="SignUp" method="post">
									<div class="mb-3">
										<input type="text" name="username" required class="form-control" placeholder="Tên" aria-label="Name" aria-describedby="email-addon">
									</div>
									<div class="mb-3">
										<input type="email" id="email" name="email" required class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
									</div>
									<div class="mb-3">
										<input type="password" id="password" name="password" required class="form-control" placeholder="Mật Khẩu" aria-label="Password" aria-describedby="password-addon">
									</div>
									<!-- Display success message if it exists -->
									@if (ViewBag.SuccessMessage != null)
									{
										<div class="alert alert-success">
											@ViewBag.SuccessMessage
										</div>
									}

									<!-- Display error message if it exists -->
									@if (ViewBag.ErrorMessage != null)
									{
										<div class="alert alert-danger">
											@ViewBag.ErrorMessage
										</div>
									}

									<div class="text-center">
										<button type="submit" class="btn btn-signup-custom w-100 my-4 mb-2">Đăng Ký</button>
									</div>
									<p class="text-sm mt-3 mb-0">Đã Có Tài Khoản? <a href="~/Login" class="text-signup-custom font-weight-bolder">Đăng Nhập</a></p>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</body>

