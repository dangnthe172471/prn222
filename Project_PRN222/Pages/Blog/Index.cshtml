@page
@model Project_PRN221.Pages.Blog.IndexModel


@{
    ViewData["Title"] = "Shop Page";
    Layout = "~/Pages/Shared/ShopLayout.cshtml";
}
<body class="goto-here">
    <div class="hero-wrap hero-bread" style="background-image: url('/img/ban-sao-ban-sao-ban-sao-ban-sao-img_7868-8993.jpeg');">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="/Shop">Trang chủ</a></span> <span>Blog</span></p>
                    <h1 class="mb-0 bread">ECONEST</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section ftco-degree-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 ftco-animate">
                    <div class="row">

                        <!-- Blog here -->
                        @foreach (var item in Model.Blogs)
                        {
                            <div class="col-md-12 d-flex ftco-animate">
                                <div class="blog-entry align-self-stretch d-md-flex">
                                    <a href="/Blog/Details?id=@item.Id" class="block-20" style="background-image: url('@item.Img');">
                                    </a>
                                    <div class="text d-block pl-md-4">
                                        <div class="meta mb-3">
                                            <div><a href="#">@item.CreatedAt</a></div>
                                            <div><a href="#">Admin</a></div>
                                        </div>
                                        <h3 class="heading"><a href="/Blog/Details?id=@item.Id">@item.Title</a></h3>
                                        <p>@item.Description</p>
                                        <p><a href="Blog/Details?id=@item.Id" class="btn btn-primary py-2 px-3">Đọc thêm</a></p>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- Blog here -->

                    </div>
                </div> <!-- .col-md-8 -->

                <!-- Category -->
                <div class="col-lg-4 sidebar ftco-animate">
                    <div class="sidebar-box">
                        <form action="#" class="search-form">
                            <div class="form-group">
                                <span class="icon ion-ios-search"></span>
                                <input type="text" class="form-control" placeholder="Tìm kiếm...">
                            </div>
                        </form>
                    </div>
                    <div class="sidebar-box ftco-animate">
                        <h3 class="heading">Thể loại</h3>
                        <ul class="categories">
                            <li><a href="#">Tin hot<span>(12)</span></a></li>
                            <li><a href="#">Môi trường <span>(22)</span></a></li>
                            <li><a href="#">Khuyến mãi <span>(37)</span></a></li>
                            <li><a href="#">Sản phẩm mới <span>(42)</span></a></li>
                        </ul>
                    </div>

                    <div class="sidebar-box ftco-animate">
                        <h3 class="heading">Blog gần đây</h3>

                        <!-- Start recent blog -->
                        @foreach (var item in Model.RecentNews)
                        {
                            <div class="block-21 mb-4 d-flex">
                                <a class="blog-img mr-4" style="background-image: url('@item.Img');"></a>
                                <div class="text">
                                    <h3 class="heading-1"><a href="Blog/Details?id=@item.Id">@item.Title</a></h3>
                                    <div class="meta">
                                        <div><a href="Blog/Details?id=@item.Id"><span class="icon-calendar"></span> @item.CreatedAt</a></div>
                                        <div><a href="Blog/Details?id=@item.Id"><span class="icon-person"></span> Admin</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- End recent blog -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section">
        <div class="container">
            <div class="row no-gutters ftco-services">
                <div class="col-md-3 text-center d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services mb-md-0 mb-4">
                        <div class="icon bg-color-1 active d-flex justify-content-center align-items-center mb-2">
                            <span class="flaticon-shipped"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">Miên phí vận chuyển</h3>
                            <span>Với những đơn hàng từ 100k</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services mb-md-0 mb-4">
                        <div class="icon bg-color-2 d-flex justify-content-center align-items-center mb-2">
                            <span class="flaticon-box"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">Đóng gói tiện lợi</h3>
                            <span>Sản phẩm sạch đẹp</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services mb-md-0 mb-4">
                        <div class="icon bg-color-3 d-flex justify-content-center align-items-center mb-2">
                            <span class="flaticon-award"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">Chất lượng</h3>
                            <span>Sản phẩm tự nhiên</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-center d-flex align-self-stretch ftco-animate">
                    <div class="media block-6 services mb-md-0 mb-4">
                        <div class="icon bg-color-4 d-flex justify-content-center align-items-center mb-2">
                            <span class="flaticon-customer-service"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">Hỗ Trợ</h3>
                            <span>Hỗ Trợ 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
