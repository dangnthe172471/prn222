	<script>
		// Lấy tất cả các phần tử sao
		const stars = document.querySelectorAll('.rating .star');

		stars.forEach(star => {
			star.addEventListener('mouseover', function () {
				const value = this.getAttribute('data-value');
				updateStars(value);
			});

			star.addEventListener('mouseout', function () {
				const selectedValue = document.querySelector('.rating .star.selected')?.getAttribute('data-value') || 0;
				updateStars(selectedValue);
			});

			star.addEventListener('click', function () {
				const value = this.getAttribute('data-value');
				setRating(value);
			});
		});

		function updateStars(value) {
			stars.forEach(star => {
				if (star.getAttribute('data-value') <= value) {
					star.querySelector('span').classList.add('ion-ios-star');
					star.querySelector('span').classList.remove('ion-ios-star-outline');
				} else {
					star.querySelector('span').classList.add('ion-ios-star-outline');
					star.querySelector('span').classList.remove('ion-ios-star');
				}
			});
		}

		function setRating(value) {
			stars.forEach(star => {
				star.classList.remove('selected');
			});
			document.querySelector(`.rating .star[data-value="${value}"]`).classList.add('selected');
			updateStars(value);
		}
	</script>

