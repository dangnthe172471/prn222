@page
@model Project_PRN221.Pages.Accounts.CreateModel
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}
<head>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center mb-3">
                <h2>Create New User</h2>

            </div>

            <form asp-action="Add" method="post" onsubmit="return confirm('Are you sure you want to create ?');">
                <div class="validation-summary">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-md-6">

                        <div class="mb-3">
                            <label asp-for="User.Username" class="control-label"></label>
                            <input name="UserName" class="form-control" />
                            <span asp-validation-for="User.Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="User.Email" class="control-label"></label>
                            <input name="Email" class="form-control" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="User.Password" class="control-label"></label>
                            <input name="Password" class="form-control" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="User.Dob" class="control-label"></label>
                            <input name="Dob" class="form-control" />
                            <span asp-validation-for="User.Dob" class="text-danger" type="date"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="User.Role.Name" class="control-label"></label>
                            <select name="RoleName" class="form-control">
                                @foreach(var role in Model.Roles){
                                    <option value="@role.Id">@role.Name</option>
                                }
                               
                            </select>
                            <span asp-validation-for="User.Role.Name" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</body>


